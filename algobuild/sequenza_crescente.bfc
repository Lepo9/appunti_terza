PROG main
	IN n
	IN precedente
	ASSIGN crescente = 1
	FOR i = 0; i < n - 1; i= i + 1
		IN attuale
		IF attuale <= precedente
			ASSIGN crescente = 0
		ELSE //if attuale <= precedente
		END IF //attuale <= precedente
		ASSIGN precedente = attuale
	END FOR //i = 0; i < n - 1; i= i + 1
	IF crescente ==  1
		OUT "crescente"
	ELSE //if crescente ==  1
		OUT "non crescente"
	END IF //crescente ==  1
END PROG //main
